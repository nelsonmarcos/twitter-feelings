{
  "name": "Twitter Feelings",
  "options_page": "options.html",
  "author": "Uğur Kellecioğlu",
  "description": "An extension to track how you feel on Twitter.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "web_accessible_resources": ["happy.png", "sad.png", "neutral.png"],
  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "js": ["content.bundle.js"]
    }
  ],
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "alarms",
    "*://*/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
